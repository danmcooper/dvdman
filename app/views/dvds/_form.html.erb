<%= form_for @dvd, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :release_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :release_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :summary, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :summary, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :asin, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :asin, :class => 'text_field' %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label :actors, :class => 'control-label' %>
    <div class="controls">
      <%= select_tag "dvd[actor_ids]", options_for_select(Actor.all.map { |actor| [actor.name, actor.id] }, @dvd.actors.map { |actor| actor.id}), {:multiple=>true, :include_blank => "", :size=>10} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :director, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :director_id, Director.all, :id, :name, :include_blank => "" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dvds_path, :class => 'btn' %>
  </div>
<% end %>
